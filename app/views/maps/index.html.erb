<div id="barchart"></div>

<script src="http://d3js.org/d3.v3.min.js"></script>
<script>

var dataset1 = [10, 12, 15, 20, 22, 24, 33, 40, 42, 43, 46, 50, 80, 31];
// var dataset2 = [1, 3, 5, 6, 7, 14, 10, 20, 25, 35, 40, 76, 200];


var width = 500;
var height = 350;

var color = d3.scale.category20c();

var canvas = d3.select("#barchart")
  .append("svg")
  .attr("width", width)
  .attr("height", height)
  .attr("padding", 40);

