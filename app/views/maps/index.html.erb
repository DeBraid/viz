// draw chart

function render(sub) {

// set up scale
var xScale = d3.scale.linear()
  .domain([0, d3.max(sub, function(d){ return d; })])
  .range([0, width]);        

// add horizontal bars
var bars = canvas.selectAll("rect")
    .data(sub) 
    .enter() 
    .append("rect")
    .attr("class", "bars")
    .transition()
    .delay(function (d,i) {
      return i * 200;
    })
    .duration( function(d,i){ return d * 100; })
    .attr("width", function(d) { return xScale(d); }) 
    .attr("height", 10)
    .attr("fill", function(d) { return color(d) })
    .attr("x", 50)
    .attr("y", function(d, i) { return i * 15 })
    .attr("stroke", function(d) { return color(d*25) });

// set up axis
var xAxis = d3.svg.axis()
  .scale(xScale)
  .orient("bottom")
  .ticks(6);

// add x-axis
canvas.append("g")
  .attr("class", "axis")
  .attr("transform", "translate(50,220)")
  .style("opacity", 0.2)
  .call(xAxis);



d3.select("#dataToggle")
  .on("click", function() {

    dataset2 = [10, 30, 55, 67, 73, 148, 56, 205, 251, 354, 402, 766, 200];
    
    canvas.selectAll('rect')
      .data(dataset2)
      .transition()
      .delay(function (d,i) {
            return i * 200;
      })
      .duration( function(d,i){ return d * 100; })
      .attr("width", function(d) { return xScale(d); }) 
      .attr("height", 10)
      .attr("fill", function(d) { return color(d) })
      .attr("x", 50)
      .attr("y", function(d, i) { return i * 15 })
      .attr("stroke", function(d) { return color(d*25) })
  });

};



  render(dataset1);
  
$('#dataToggle').hover(function() {
  $(this).css({color: "blue", font: "1em"  })
});

$("#dataReset").click( render(dataset1) );

